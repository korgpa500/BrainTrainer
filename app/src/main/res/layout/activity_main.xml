<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yousryelwrdany.braintrainer.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgLogo"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/txtContainer"
        android:layout_below="@id/imgLogo"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30S"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/txtColorRes"
            android:id="@+id/txtSecond"
            android:gravity="left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10+15"
            android:textStyle="bold"
            android:textColor="@color/txtColor"
            android:textSize="30sp"
            android:id="@+id/txtQuestion"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20/20"
            android:textStyle="bold"
            android:textColor="@color/txtColorRes"
            android:textSize="30sp"
            android:id="@+id/txtAnswer"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContainer"
        android:id="@+id/btnContainer1"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40"
            android:background="@drawable/custom_btn"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/Btn0"
            android:tag="0"
            android:padding="30dp"
            android:textColor="@color/txtColor"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="1dp"
            android:onClick="chooseAnswer"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/Btn1"
            android:tag="1"
            android:background="@drawable/custom_btn"
            android:padding="30dp"
            android:textColor="@color/txtColor"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="1dp"
            android:onClick="chooseAnswer"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnContainer1"
        android:id="@+id/btnContainer2"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/custom_btn"
            android:id="@+id/Btn2"
            android:tag="2"
            android:padding="30dp"
            android:textColor="@color/txtColor"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="1dp"
            android:onClick="chooseAnswer"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/Btn3"
            android:tag="3"
            android:padding="30dp"
            android:background="@drawable/custom_btn"
            android:textColor="@color/txtColor"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="1dp"
            android:onClick="chooseAnswer"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/txtColorRes"
        android:layout_below="@id/btnContainer2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
